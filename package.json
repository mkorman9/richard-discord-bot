{
  "name": "richard-discord-bot",
  "version": "1.0.0",
  "author": "Micha≈Ç Korman",
  "license": "MIT",
  "main": "dist",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "compile": "tsc -p tsconfig.json",
    "build": "npm-run-all clean lint compile",
    "serve": "TZ=UTC NODE_ENV=development node ./dist",
    "start": "tsc-watch --onSuccess \"npm-run-all lint serve\""
  },
  "dependencies": {
    "discord.js": "^13.1.0",
    "dotenv": "^10.0.0",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node": "^16.7.1",
    "@types/shelljs": "^0.8.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "tsc-watch": "^4.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
